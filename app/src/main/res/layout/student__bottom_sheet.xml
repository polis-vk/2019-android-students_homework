<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/student_bottom_sheet__st_lettering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/student_activity__student"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/student_bottom_sheet__photo"
        android:layout_width="125dp"
        android:layout_height="130dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/set_text__first_name_student"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin = "8dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_bottom_sheet__photo"
        app:layout_constraintTop_toBottomOf="@+id/student_bottom_sheet__st_lettering"
        app:layout_constraintVertical_bias="0.062"
        android:inputType="text"
        tools:ignore="Autofill,LabelFor" />

    <EditText
        android:id="@+id/set_text__second_name_student"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_bottom_sheet__photo"
        app:layout_constraintTop_toBottomOf="@+id/set_text__first_name_student"
        app:layout_constraintVertical_bias="0.033"
        tools:ignore="Autofill,LabelFor" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/student_bottom_sheet__delete_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:text="@string/activity_student__delete_student_button"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/student_bottom_sheet__save_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:text="@string/activity_student__save_student_button"
            tools:ignore="ButtonStyle" />

    </LinearLayout>


    <CheckBox
        android:id="@+id/checkBox__gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/activity_student__checkbox_gender"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_text__second_name_student"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/student_bottom_sheet__first_name_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/activity_student__first_name_string"
        app:layout_constraintBottom_toTopOf="@+id/set_text__first_name_student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/student_bottom_sheet__photo"
        app:layout_constraintTop_toBottomOf="@+id/student_bottom_sheet__st_lettering"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/student_bottom_sheet__first_second_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/activity_student__second_name_string"
        app:layout_constraintBottom_toTopOf="@+id/set_text__second_name_student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/student_bottom_sheet__photo"
        app:layout_constraintTop_toBottomOf="@+id/set_text__first_name_student"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>