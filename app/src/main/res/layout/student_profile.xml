<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/student"
        android:textStyle="bold"
        android:textSize="15sp"
        android:typeface="monospace"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barrier_top"
        />

    <android.support.constraint.Barrier
        android:id="@+id/barrier_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="top"
        app:constraint_referenced_ids="student_profile__avatar,student_profile__second_name" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/student_profile__avatar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/barrier_top"
        app:layout_constraintBottom_toTopOf="@id/barrier_bottom"
        tools:src="@drawable/male_1"
        />


    <EditText
        android:id="@+id/student_profile__second_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:typeface="monospace"
        android:textColor="@color/black"
        android:hint="@string/second_name"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintStart_toEndOf="@+id/student_profile__avatar"
        app:layout_constraintBottom_toTopOf="@+id/student_profile__first_name"
        app:layout_constraintTop_toTopOf="@id/barrier_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Иванов"
        />

    <EditText
        android:id="@+id/student_profile__first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:typeface="monospace"
        android:textColor="@color/black"
        android:hint="@string/first_name"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintStart_toEndOf="@+id/student_profile__avatar"
        app:layout_constraintBottom_toTopOf="@+id/student_profile__male_gender"
        app:layout_constraintTop_toBottomOf="@+id/student_profile__second_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Иван"
        />

    <CheckBox
        android:id="@+id/student_profile__male_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:typeface="monospace"
        android:textColor="@color/black"
        android:text="@string/male_gender"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintStart_toEndOf="@+id/student_profile__avatar"
        app:layout_constraintTop_toBottomOf="@+id/student_profile__first_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barrier_bottom"
        />

    <android.support.constraint.Barrier
        android:id="@+id/barrier_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="student_profile__avatar,student_profile__male_gender" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/student_profile__buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/barrier_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        >

        <Button
            android:id="@+id/student_profile__buttons__remove"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/student_profile__buttons__save"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        <Button
            android:id="@+id/student_profile__buttons__save"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/student_profile__buttons__remove" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>